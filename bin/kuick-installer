 */

$index = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/public/index.php');
$console = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/bin/console');
$listenersConfig = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.listeners.php');
$middlewaresConfig = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.middlewares.php');
$appDi = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/di/app.di.php');
$appDiDev = file_get_contents('https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/di/app.di@dev.php');

mkdir('public', 0777, true);
mkdir('bin', 0777, true);
mkdir('config/di', 0777, true);

file_put_contents('public/index.php', $index);
file_put_contents('bin/console', $console);
file_put_contents('config/app.listeners.php', $listenersConfig);
file_put_contents('config/app.middlewares.php', $middlewaresConfig);
file_put_contents('config/di/app.di.php', $appDi);
file_put_contents('config/di/app.di@dev.php', $appDiDev);
