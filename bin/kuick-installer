namespace Kuick\Framework\Installer;

$fileMap = [
    'public/index.php' => 'app/public/index.php',
    'bin/console' => '/app/bin/console',
    'config/di/app.di.php' => '/app/config/di/app.di.php',
    'config/di/app.di@dev.php' => '/app/config/di/app.di@dev.php',
    'config/app.commands.php' => '/app/config/app.commands.php',
    'config/app.guards.php' => '/app/config/app.guards.php',
    'config/app.listeners.php' => '/app/config/app.listeners.php',
    'config/app.middlewares.php' => '/app/config/app.middlewares.php',
    'config/app.routes.php' => '/app/config/app.routes.php',
];

foreach (array_keys($fileMap) as $file) {
    if (file_exists($file)) {
        echo 'Skipping install: ' . $file . ' - file already exists' . PHP_EOL;
        exit;
    }
}
foreach ($fileMap as $target => $source) {
    $dir = dirname($target);
    if (!is_dir($dir)) {
        mkdir($dir, 0777, true);
    }
    copy($source, $target);
    echo 'Installed: ' . $source . PHP_EOL;
}
