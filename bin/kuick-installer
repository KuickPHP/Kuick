 */

namespace Kuick\Framework\Installer;

$fileMap = [
    'public/index.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/public/index.php',
    'bin/console' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/bin/console',
    'config/di/app.di.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/di/app.di.php',
    'config/di/app.di@dev.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/di/app.di@dev.php',
    'config/app.commands.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.commands.php',
    'config/app.guards.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.guards.php',
    'config/app.listeners.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.listeners.php',
    'config/app.middlewares.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.middlewares.php',
    'config/app.routes.php' => 'https://raw.githubusercontent.com/milejko/kuick-project/refs/heads/main/config/app.routes.php',
];

foreach (array_keys($fileMap) as $file) {
    if (file_exists($file)) {
        echo 'Skipping install: ' . $file . ' - file already exists' . PHP_EOL;
        exit;
    }
}
foreach ($fileMap as $file => $url) {
    $dir = dirname($file);
    if (!is_dir($dir)) {
        mkdir($dir, 0777, true);
    }
    file_put_contents($file, file_get_contents($url));
    echo 'Installed: ' . $file . PHP_EOL;
}
